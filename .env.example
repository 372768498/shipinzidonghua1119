# ============================================
# Jilo.ai 环境变量配置模板
# ============================================

# 应用基础配置
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=Jilo.ai

# ============================================
# Supabase 配置
# ============================================
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url_here
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# ============================================
# API 密钥配置
# ============================================

# Apify (爬虫服务)
APIFY_API_TOKEN=your_apify_api_token_here

# Google Gemini (AI分析和内容审查)
GEMINI_API_KEY=your_gemini_api_key_here

# FAL.AI (视频生成)
FAL_KEY=your_fal_api_key_here

# Google OAuth (YouTube上传)
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_OAUTH_REDIRECT_URI=http://localhost:3000/api/youtube/oauth/callback

# Stripe (支付)
STRIPE_SECRET_KEY=your_stripe_secret_key_here
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret_here

# ============================================
# 安全配置
# ============================================

# Webhook密钥 (32字节随机字符串)
# 生成方法: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
APIFY_WEBHOOK_SECRET=your_apify_webhook_secret_here
FAL_WEBHOOK_SECRET=your_fal_webhook_secret_here

# 加密密钥 (32字节用于AES-256-GCM)
# 生成方法: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENCRYPTION_KEY=your_64_char_hex_encryption_key_here

# ============================================
# 数据库配置 (可选，用于直连)
# ============================================
DATABASE_URL=postgresql://postgres:[password]@db.[project-ref].supabase.co:5432/postgres

# ============================================
# 监控和日志 (可选)
# ============================================
# Sentry DSN (错误监控)
NEXT_PUBLIC_SENTRY_DSN=
SENTRY_AUTH_TOKEN=

# LogFlare (日志管理)
LOGFLARE_API_KEY=
LOGFLARE_SOURCE_TOKEN=

# ============================================
# 功能开关 (可选)
# ============================================
ENABLE_CONTENT_MODERATION=true
ENABLE_AUTO_CLEANUP=true
ENABLE_ANALYTICS=true

# ============================================
# 配额限制 (可选，覆盖数据库默认值)
# ============================================
DEFAULT_MONTHLY_VIDEO_LIMIT=10
MAX_CONCURRENT_GENERATIONS=3

# ============================================
# 说明
# ============================================
# 1. 复制此文件为 .env.local
# 2. 填写所有必需的密钥
# 3. 确保 .env.local 已添加到 .gitignore
# 4. 生产环境使用 Vercel Environment Variables
